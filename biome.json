{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["*.graphql", "!src/graphql/client/schema/schema.graphql"]
  },
  "graphql": {
    "formatter": {
      "enabled": true
    }
  }
}
